<!-- views/users.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Data</title>
    <style>
        /* public/style.css */

        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        .user-cards {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
        }

        .user-card {
            max-width: 300px;
            background-color: #fff;
            padding: 20px;
            margin: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .user-card h3 {
            margin-bottom: 10px;
            color: #333;
        }
    </style>
</head>

<body>
    <h1>User Data</h1>

    <div class="user-cards">
        <% users.forEach(user=> { %>
            <div class="user-card">
                <h3>
                    <%= user.firstName %>
                        <%= user.lastName %>
                </h3>
                <p>Email: <%= user.email %>
                </p>
                <p>Phone Number: <%= user.phoneNumber %>
                </p>
            </div>
            <% }); %>
    </div>
</body>

</html>