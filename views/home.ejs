<!DOCTYPE html>
<html lang="ar">
  <%- include("./partials/head.ejs") %>
<body>
  <%- include("./partials/nav.ejs") %>
  <header>
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active" style="background-image: url('https://source.unsplash.com/RCAhiGJsUUE/1920x1080')">
          <div class="carousel-caption">
            <h5>First slide label</h5>
            <p>Some representative placeholder content for the first slide.</p>
          </div>
        </div>
        <div class="carousel-item" style="background-image: url('https://source.unsplash.com/wfh8dDlNFOk/1920x1080')">
          <div class="carousel-caption">
            <h5>Second slide label</h5>
            <p>Some representative placeholder content for the second slide.</p>
          </div>
        </div>
        <div class="carousel-item" style="background-image: url('https://source.unsplash.com/lHGeqh3XhRY/1920x1080')">
          <div class="carousel-caption">
            <h5>Third slide label</h5>
            <p>Some representative placeholder content for the third slide.</p>
          </div>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </header>
  <div class="h1-heading">
    <h1>المناطق التي تم زراعتها</h1>
  </div>
  <section class="container-Afforested">
    <div class="options">
      <% if (AreasAfforested && AreasAfforested.length > 0) { %>
        <% AreasAfforested.forEach(area => { %>
          <div class="option" style="--optionBackground:url(<%= area.image_url %>);">
            <div class="shadow"></div>
            <div class="label">
              <div class="icon">
                <i class="fas fa-tree"></i>
              </div>
              <div class="info">
                <div class="main"><%= area.placeName %></div>
                <div class="sub"><%= area.areasLocation %></div>
                <div class="sub"><%= area.treesPlanted %> trees planted</div>
                <div class="sub">Planted on <%= area.datePlanted %></div>
                <!-- Add other details as needed -->
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <p>No afforested areas found</p>
      <% } %>
    </div>
  </section>
  <div class="h1-heading">
    <h1>المناطق التي سيتم زراعتها</h1>
  </div>
  <section class="container-WillAfforested">
    <div class="center">
        <% if (WillAfforestedAreas && WillAfforestedAreas.length > 0) { %>
            <% WillAfforestedAreas.forEach(area => { %>
                <div class="property-card">
                    <a href="#">
                        <div class="property-image">
                            <div class="property-image-title">
                                <h5><%= area.placeName %></h5>
                            </div>
                            <!-- Add the image source here -->
                            <img class="img_WillAfforestedAreas" src="<%= area.image_url %>" alt="<%= area.placeName %> Image">
                        </div>
                    </a>
                    <div class="property-description">
                        <h5><%= area.placeName %></h5>
                        <p><%= area.areasLocation %> - <%= area.datePlanted %></p>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p>No afforested areas found</p>
        <% } %>
    </div>
  </section>
  <div class="h1-heading">
    <h1>النشاطات</h1>
  </div>
  <section>
    <% if (Activities && Activities.length > 0) { %>
      <ul>
        <% Activities.forEach(activity => { %>
          <li>
            <img src="<%= activity.image_url %>" alt="<%= activity.activityName %> Image">
            <h3><%= activity.activityName %></h3>
            <p><%= activity.activityDescription %></p>
            <p>Date: <%= activity.activityDate %></p>
            <!-- Add other details as needed -->
          </li>
        <% }); %>
      </ul>
    <% } else { %>
      <p>No activities found</p>
    <% } %>
  </section>
  <%- include("./partials/footer.ejs") %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  <script src="/app.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/vue@2"></script>
</body>
</html>